
<h2>Past Activities</h2>
<table class="table">
  <thead>
    <tr>
    <th><%= link_to "Date", :sort => "day"%> </th>
    <th><%= link_to "Subject", :sort => "workout_name"%> </th>
    <th><%= link_to "Category", :sort => "workout_type"%> </th>
    <th><%= link_to "Location", :sort => "location"%> </th>
    <th><%= link_to "Intensity", :sort => "intensity"%> </th>
    <th><%= link_to "Duration (min)", :sort => "time"%> </th>
    <th><%= form_tag(workouts_path, method: :get) do %></th>
  <th><%= text_field_tag(:search, params[:search]) %> </th>
  <th><%= submit_tag ("Search"), class:"btn btn-dark" %></th>
  <br>
<% end %>
      <th colspan="3"></th>
      <% @workouts.each do |workout| %>
  <% end %>
    </tr>
  </thead>
  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
  <tr>
    <td><%= workout.day %></td>
    <td><%= workout.workout_name %></td>
    <td><%= workout.workout_type %></td>
    <td><%= workout.location %></td>
    <td><%= workout.intensity %></td>
    <td><%= workout.time %></td>    

    <td><%= link_to 'Show', workout, class:"btn btn-primary btn-sm" %></td>
    <td><%= link_to 'Edit', edit_workout_path(workout), class:"btn btn-dark btn-sm" %></td>
    <td><%= link_to 'Delete', workout, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
    <% end %>
  </tbody>
</table>
<br>
